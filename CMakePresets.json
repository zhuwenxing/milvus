{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 18,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake_build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
      }
    },
    {
      "name": "dev",
      "displayName": "Development Build (Debug)",
      "description": "Fast iterative development build with debugging symbols",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_UNIT_TEST": "ON",
        "BUILD_COVERAGE": "OFF",
        "MILVUS_USE_CCACHE": "ON",
        "USE_ASAN": "OFF",
        "USE_DYNAMIC_SIMD": "ON"
      }
    },
    {
      "name": "dev-asan",
      "displayName": "Development with AddressSanitizer",
      "description": "Debug build with memory error detection",
      "inherits": "dev",
      "cacheVariables": {
        "USE_ASAN": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build (Optimized)",
      "description": "Production-ready optimized build",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_UNIT_TEST": "OFF",
        "BUILD_COVERAGE": "OFF",
        "MILVUS_USE_CCACHE": "ON",
        "USE_ASAN": "OFF",
        "USE_DYNAMIC_SIMD": "ON"
      }
    },
    {
      "name": "release-with-tests",
      "displayName": "Release Build with Tests",
      "description": "Optimized build with unit tests",
      "inherits": "release",
      "cacheVariables": {
        "BUILD_UNIT_TEST": "ON"
      }
    },
    {
      "name": "coverage",
      "displayName": "Coverage Build",
      "description": "Build with code coverage instrumentation",
      "inherits": "dev",
      "cacheVariables": {
        "BUILD_COVERAGE": "ON",
        "BUILD_UNIT_TEST": "ON"
      }
    },
    {
      "name": "gpu",
      "displayName": "GPU Build (Release)",
      "description": "Release build with GPU support",
      "inherits": "release",
      "cacheVariables": {
        "MILVUS_GPU_VERSION": "ON",
        "MILVUS_CUDA_ARCH": "DEFAULT"
      }
    },
    {
      "name": "gpu-dev",
      "displayName": "GPU Build (Debug)",
      "description": "Debug build with GPU support",
      "inherits": "dev",
      "cacheVariables": {
        "MILVUS_GPU_VERSION": "ON",
        "MILVUS_CUDA_ARCH": "DEFAULT"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "displayName": "Build Development",
      "configurePreset": "dev",
      "jobs": 0,
      "targets": ["install"]
    },
    {
      "name": "dev-asan",
      "displayName": "Build Development (ASAN)",
      "configurePreset": "dev-asan",
      "jobs": 0,
      "targets": ["install"]
    },
    {
      "name": "release",
      "displayName": "Build Release",
      "configurePreset": "release",
      "jobs": 0,
      "targets": ["install"]
    },
    {
      "name": "release-with-tests",
      "displayName": "Build Release with Tests",
      "configurePreset": "release-with-tests",
      "jobs": 0,
      "targets": ["install"]
    },
    {
      "name": "coverage",
      "displayName": "Build Coverage",
      "configurePreset": "coverage",
      "jobs": 0,
      "targets": ["install"]
    },
    {
      "name": "gpu",
      "displayName": "Build GPU",
      "configurePreset": "gpu",
      "jobs": 0,
      "targets": ["install"]
    },
    {
      "name": "gpu-dev",
      "displayName": "Build GPU Development",
      "configurePreset": "gpu-dev",
      "jobs": 0,
      "targets": ["install"]
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "displayName": "Test Development",
      "configurePreset": "dev",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    }
  ]
}
